<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="@dimen/card_elevation"
    app:cardCornerRadius="@dimen/card_corner_radius"
    android:layout_margin="@dimen/app_margin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_food_name"
            tools:text="Name_Food"
            android:textColor="@color/design_default_color_primary_dark"
            android:textStyle="bold"
            android:textSize="@dimen/item_food_name"
            android:gravity="center"
            android:lines="1"
            android:layout_margin="@dimen/app_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/item_food_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/app_margin"
            android:textSize="@dimen/item_text_food"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_food_name"
            tools:layout_editor_absoluteY="5dp"
            tools:text="Text_Food"
            android:textColor="@color/design_default_color_primary"/>
        <TextView
            android:id="@+id/shelf_life"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="25/04/21"
            android:layout_margin="@dimen/app_margin"
            android:textSize="@dimen/item_text_food"
            app:layout_constraintTop_toBottomOf="@+id/item_food_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/design_default_color_primary"
            />
        <TextView
            android:id="@+id/categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Grocery"
            android:layout_margin="@dimen/app_margin"
            android:textSize="@dimen/item_text_food"
            android:gravity="end"
            app:layout_constraintTop_toBottomOf="@+id/shelf_life"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/design_default_color_primary"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>